<ul class="messages">
	
	<li class="message">
		<span class="message-id"><%= message.id %></span> <%= message.body %>
		<div class="post-info">
			Sent by <%= message.from.split("").each_with_index.map { |x,i| i < 8 ? x : "*" }.join[1.. -1].insert(1, "-").insert(5, "-").insert(9, "-") %> on <%= message.created_at.to_formatted_s(:long) %>
		</div>
		
		<% if message.likes.length > 0 %>
			<img class="like-btn" src="<%= image_path("buttsit-liked.png") %>">
		<% else %>
			<img class="like-btn" src="<%= image_path("buttsit.png") %>">
		<% end %>
	</li>

</ul>